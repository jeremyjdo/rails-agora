<div class="form" style="background-image: linear-gradient(-225deg, rgba(0,50,80,0.6) 0%, rgba(0,20,40,0.6) 50%), url('/fond-home.jpg');">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <h2 class="text-center">Sign up</h2>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, placeholder: "Ex: phobie@administrative.com" %>
          <%= f.input :password, required: true, placeholder: "6 characters minimum" %>
          <%= f.input :password_confirmation, required: true %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up" %>
        </div>
            <% end %>
      </div>
    </div>
  </div>
</div>
