<h4>Selected documents</h4>
<div class="selection-content">
  <ul class="list-unstyled selected-documents-content">
    <% @documents_selected.each do |doc| %>
      <%= link_to document_path(doc) do %>
        <li class="selected-document">
          <%= cl_image_tag doc.photo, class: "document-thumbnail", "format" => 'jpg' %>
          <div class="unselect">
            <%= link_to document_path(doc, document: {selected: false}), method: :patch do %>
              <i class="fa fa-times" aria-hidden="true" style="margin: 10px"></i>
            <% end %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
<div class="action-bar-selection">
  <ul class="list-inline">
<!--       <i class="fa fa-download fa-2x action-style" aria-hidden="true" ></i> -->
    <i class="fa fa-times fa-2x action-style" aria-hidden="true" ></i>
    <i class="fa fa-trash-o fa-2x " aria-hidden="true" ></i>
  </ul>
</div>

