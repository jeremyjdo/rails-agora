<% content_for :navbar do %>
   <!-- search form  -->
    <div class="search-bar">
      <%= form_tag(documents_path, method: :get) do %>
        <%= hidden_field_tag :query, @user_selected_tagnames%>
        <%= text_field_tag :search_tag, params[:search_tag],
          class: "form-control border-round",
          placeholder: "Essayez 'Banque'"
        %>
      <% end %>
    </div>
<% end %>

<div class="index-wrapper">
  <% if @documents_selected.empty? %>
    <div class="main-section-large">
      <% if @user_selected_tags.any? %>
        <div class="search_section">
          <%= render 'search_section' %>
        </div>
      <% end %>
      <div class="results_section">
        <%= render 'results_section' %>
      </div>
      <!-- link to add a new document -->
      <%= link_to new_document_path do %>
        <i class="fa fa-plus-circle addbutton corner" aria-hidden="true"></i>
      <% end %>
    </div>

  <% else %>

    <div class="main-section-medium">
      <% if @user_selected_tags.any? %>
        <div class="search_section">
          <%= render 'search_section' %>
        </div>
      <% end %>
      <div class="results_section">
        <%= render 'results_section' %>
      </div>
      <%= link_to new_document_path do %>
        <i class="fa fa-plus-circle addbutton corner" aria-hidden="true"></i>
      <% end %>
    </div>
    <div class="selection_section text-center">
      <%= render 'selection_section' %>
    </div>
      <!-- link to add a new document -->
  <% end %>

</div>




